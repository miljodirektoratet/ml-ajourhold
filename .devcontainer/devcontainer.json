// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "ml-ajourhold",

	// Update the 'dockerComposeFile' list if you have more compose files or use different names.
	// The .devcontainer/docker-compose.yml file contains any overrides you need/want to make.
	"dockerComposeFile": [
		"../compose.yml",
		"docker-compose.yml"
	],

	// The 'service' property is the name of the service for the container that VS Code should
	// use. Update this value and .devcontainer/docker-compose.yml to the real service name.
	"service": "app",

	// The optional 'workspaceFolder' property is the path VS Code should open by default when
	// connected. This is typically a file mount in .devcontainer/docker-compose.yml
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers-extra/features/go-task:1": {}
	},

	// Configure VS Code settings specific to the container
	"customizations": {
		"vscode": {
			"extensions": [
				// Python extensions
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-pylance",

				// Jupyter Notebooks
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.vscode-jupyter-slideshow",

				// Git and Version Control
				"mhutchie.git-graph",
				"donjayamanne.githistory",

				// GitHub Copilot
				"github.copilot",
				"github.copilot-chat",

				// file support and linters
				"tamasfe.even-better-toml",
				"redhat.vscode-yaml",
				"bierner.markdown-mermaid",
				"yzhang.markdown-all-in-one",
				"njpwerner.autodocstring",
				"samuelcolvin.jinjahtml",
				"esbenp.prettier-vscode",
				"charliermarsh.ruff",
				"PKief.material-icon-theme",

				// SSH and Remote Development
				"ms-vscode-remote.vscode-remote-extensionpack",

				// Container Development
				"ms-azuretools.vscode-docker"
			],
			"settings": {
				// Python interpreter and tools
				// UV PATH WINDOWS: ${workspaceFolder}/.venv/Scripts/python
				// UV PATH LINUX/MAC: ${workspaceFolder}/.venv/bin/python
				"python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
				"mypy-type-checker.interpreter": ["${workspaceFolder}/.venv/bin/python"],
				"ruff.interpreter": ["${workspaceFolder}/.venv/bin/python"],

				// Formatting
				"editor.defaultFormatter": "charliermarsh.ruff",
				"editor.formatOnSave": true,
				"notebook.formatOnSave.enabled": true,
				"ruff.format.preview": false,
				"ruff.organizeImports": true,

				// Editor rulers
				"editor.rulers": [
					{ "column": 78, "color": "#737171" },
					{ "column": 88, "color": "#2affa3" }
				],

				// Python analysis and debugging
				"python.analysis.autoImportCompletions": true,
				"debugpy.showPythonInlineValues": true,
				"github.copilot.enable": {
					"scminput": true
				},

				// Copilot
				"github.copilot.chat.languageContext.inline.typescript.enabled": true,
				"github.copilot.chat.languageContext.fix.typescript.enabled": true,
				"github.copilot.chat.generateTests.codeLens": true,
				"github.copilot.chat.edits.temporalContext.enabled": true,
				"github.copilot.chat.editor.temporalContext.enabled": true,
				"github.copilot.advanced": {
					"length": 500,
					"temperature": 0.1
				},

				// Color customizations
				"workbench.colorCustomizations": {
					"activityBar.background": "#312360",
					"titleBar.activeBackground": "#443186",
					"titleBar.activeForeground": "#FAF9FD"
				},

				// Python formatting and testing
				"[python]": {
					"editor.defaultFormatter": "charliermarsh.ruff"
				},
				"python.analysis.extraPaths": [],
				"autoDocstring.docstringFormat": "one-line-sphinx",
				"python.testing.pytestEnabled": true,
				"python.testing.unittestEnabled": false,
				"python.testing.pytestArgs": ["tests"],
				"python.testing.cwd": "${workspaceFolder}",
				"jupyter.interactiveWindow.cellMarker.codeRegex": "^# COMMAND ----------|^# Databricks notebook source|^(#\\s*%%|#\\s*\\<codecell\\>|#\\s*In\\[\\d*?\\]|#\\s*In\\[ \\])",
				"jupyter.interactiveWindow.cellMarker.default": "# COMMAND ----------",

				// Markdown Table of Contents settings
				"markdown.extension.toc.levels": "2..2",
				"markdown.extension.toc.updateOnSave": true,

				// git
				"git.branchProtection": ["main"],
				"git.allowNoVerifyCommit": true
			}
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Uncomment the next line if you want start specific services in your Docker Compose config.
	// "runServices": [],

	// Uncomment the next line if you want to keep your containers running after VS Code shuts down.
	// "shutdownAction": "none",

	// Run commands after the container is created
	// Set up the development environment: .venv, install dependencies, etc.
	"postCreateCommand": "task dev-setup"

	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "devcontainer"
}
